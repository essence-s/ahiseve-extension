{
  "manifest_version": 3,
  "name": "Ahiseve",
  "version": "0.0.1",
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "run_at": "document_idle",
      "js": ["app-content.js"],
      "matches": ["https://ahiseve.vercel.app/*"]
    }
  ],
  "icons": {
    "128": "icon128.png"
  },
  "permissions": ["tabs", "scripting", "storage"],
  "host_permissions": ["<all_urls>"]
}
