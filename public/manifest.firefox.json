{
  "manifest_version": 2,
  "name": "Ahiseve",
  "version": "0.0.1",
  "browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "run_at": "document_idle",
      "js": ["app-content.js"],
      "matches": [
        "https://ahiseve.vercel.app/*",
        "https://ahiseve-git-dev-essence-s-projects.vercel.app/*"
      ]
    }
  ],
  "icons": {
    "128": "icon128.png"
  },
  "permissions": [
    "scripting",
    "tabs",
    "storage",
    "activeTab",
    "webNavigation",
    "<all_urls>"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "ahiseve@essence-s",
      "strict_min_version": "91.0"
    }
  }
}
